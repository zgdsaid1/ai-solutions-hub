{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo 'No build needed - using Supabase for backend'"
  },
  "deploy": {
    "startCommand": "echo 'Backend services running on Supabase'",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "healthcheck": {
    "path": "/health",
    "timeout": 30,
    "interval": 60
  },
  "domains": [],
  "env": {
    "SUPABASE_URL": {
      "description": "Supabase project URL",
      "value": "https://qzehfqvmdzmbqournxej.supabase.co"
    },
    "SUPABASE_ANON_KEY": {
      "description": "Supabase anonymous key",
      "value": ""
    },
    "SUPABASE_SERVICE_ROLE_KEY": {
      "description": "Supabase service role key for backend operations",
      "value": ""
    },
    "NODE_ENV": {
      "description": "Node environment",
      "value": "production"
    }
  }
}
